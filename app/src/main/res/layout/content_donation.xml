<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar2"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/Zajel_gry"
    android:layout_gravity="center_horizontal">

<RelativeLayout
android:background="@color/Zajel_panfsg"
android:id="@+id/toolbar"
android:layout_width="match_parent"
android:layout_height="44dp"
android:layout_alignParentTop="true">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/pageTitleTV"
    app:layout_constraintLeft_toRightOf="@+id/BackKey"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintHorizontal_bias="0.1"
    android:maxLines="1"
    android:textAppearance="@style/TextAppearance.FontPath"
    android:textColor="@color/Zajel_white"
    android:textSize="25sp"
    android:text="شاركنا الأجر"
    android:gravity="end|center_horizontal"
    android:layout_centerVertical="true"
    android:layout_toEndOf="@+id/BackKey"
    android:layout_marginStart="30dp" />

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/BackKey"
    android:background="@drawable/arrow"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_centerVertical="true"
    android:layout_alignParentStart="true"
    android:layout_marginStart="20dp" />
</RelativeLayout>


<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_below="@+id/toolbar"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Zajel_gry"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="دعم تطوير التطبيق"
        android:textAppearance="@style/TextAppearance.FontPath"
        android:id="@+id/supportDevTV"
        android:textSize="25sp"
        android:textColor="@color/Zajel_panfsg"
        android:gravity="center_vertical|center_horizontal|center|end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_centerHorizontal="false"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/Zajel_gry3"
        android:textAppearance="@style/TextAppearance.FontPath"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/first_do_button"
        android:text="@string/donation_activity_firstdev"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20sp"
        android:layout_below="@+id/supportDevTV"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="@+id/supportDevTV"
        android:layout_marginEnd="17dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/donation_activity_seconddev"
        style="?android:attr/borderlessButtonStyle"
        android:background="@color/Zajel_gry3"
        android:textAppearance="@style/TextAppearance.FontPath"
        android:id="@+id/second_do_button"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20sp"
        android:layout_below="@+id/first_do_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="@+id/first_do_button"
        android:layout_marginTop="17dp"
        android:layout_marginStart="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="17dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/Zajel_gry3"
        android:id="@+id/third_do_button"
        android:text="@string/donation_activity_thirddev"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20sp"
        style="?android:attr/borderlessButtonStyle"
        android:textAppearance="@style/TextAppearance.FontPath"
        android:layout_below="@+id/second_do_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        app:layout_constraintTop_toBottomOf="@+id/second_do_button"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/third_do_button"
        android:text="دعم رصيد الرسائل بنقاط SMS"
        android:textAppearance="@style/TextAppearance.FontPath"
        android:id="@+id/supportSmsTV"
        android:textSize="25sp"
        android:gravity="center_vertical|center_horizontal|center|end"
        android:textColor="@color/Zajel_panfsg"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="17dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/third_do_button"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="32dp" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="9999 نقطة"
        android:background="@color/Zajel_gry3"
        android:id="@+id/first_sms_button"
        style="?android:attr/borderlessButtonStyle"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20sp"
        android:layout_below="@+id/supportSmsTV"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="17dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/supportSmsTV"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginTop="32dp" />


    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="50001 نقطة"
        style="?android:attr/borderlessButtonStyle"
        android:background="@color/Zajel_gry3"
        android:id="@+id/second_sms_button"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="20sp"
        android:layout_below="@+id/first_sms_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="17dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_sms_button"
        android:layout_marginTop="17dp"
        app:layout_constraintVertical_bias="0.56" />




</android.support.constraint.ConstraintLayout >

    </RelativeLayout>

